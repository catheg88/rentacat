
<% if cat.persisted? %>
  <form action ="/cats/<%=cat.id%>" method="POST">
    <input type="hidden" name="_method" value="PATCH">
<% else %>
  <form action ="/cats" method="POST">
<% end %>

  <label for="cat_name">name</label>
  <input name="cat[name]" id="cat_name" type="text" value= "<%= cat.name %>">
  <br>

  <label>Sexytime</label>
  <div>
    <input name="cat[sex]" id="cat_sex_m" type="radio" value="M"
      <% if cat.sex == 'M' %>
        checked
      <% end %>
    >
    <label for="cat_sex_m">Male</label>

    <input name="cat[sex]" id="cat_sex_f" type="radio" value="F"
      <% if cat.sex == 'F' %>
        checked
      <% end %>
    >
    <label for="cat_sex_f">Female</label>


  </div>
  <br>

  <label for="cat_memories">Memories</label>
  <textarea name="cat[text]" id="cat_text"><%= cat.text %></textarea>
  <br>

  <label for="cat_color">Cat Color</label>
  <select name="cat[color]">
      <% cat.colors.each do |color| %>
        <option value= <%= color %>
          <% if cat.color == color %>
            selected
          <% end %>
          > <%= color.capitalize %>
        </option>
      <% end %>

  </select>
  <br>

  <label for="cat_birth_date">Birth date</label>
  <input name="cat[birth_date]" id="cat_birth_date" type="date" value= "<%= cat.birth_date %>">

  <br>

  <input type="submit" value="Build my cat!">

</form>
